# Server Configuration
PORT=5000
NODE_ENV=production
API_VERSION=v1
DEBUG=false
LOG_LEVEL=error

# Database
MONGODB_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/audiomax?retryWrites=true&w=majority
MONGODB_USER=
MONGODB_PASS=
MONGODB_AUTH_SOURCE=admin
MONGODB_DEBUG=false

# JWT Authentication
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m
JWT_VERIFY_EMAIL_EXPIRATION=24h

# Frontend URLs
FRONTEND_URL=https://audiomax.com
FRONTEND_DOMAIN=audiomax.com
ALLOWED_ORIGINS=https://audiomax.com,https://www.audiomax.com

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM=AudioMax <noreply@audiomax.com>
SMTP_REPLY_TO=support@audiomax.com
EMAIL_VERIFICATION_URL=https://audiomax.com/verify-email
PASSWORD_RESET_URL=https://audiomax.com/reset-password

# Stripe Integration
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_BASIC=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_PREMIUM=
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_TOLERANCE=300

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=google-credentials.json
GOOGLE_PROJECT_ID=
GOOGLE_STORAGE_BUCKET=
GOOGLE_TTS_LOCATION=global
GOOGLE_TTS_LANGUAGE_CODE=en-US

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later.
RATE_LIMIT_HEADERS=true

# Cache Configuration
REDIS_URL=redis://:[password]@[host]:[port]
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Security
CORS_MAX_AGE=86400
SECURE_COOKIE=true
COOKIE_SECRET=
XSS_PROTECTION=true
CSRF_PROTECTION=true
HELMET_ENABLED=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=audio/wav,audio/mp3,audio/mpeg
UPLOAD_DIRECTORY=uploads

# Audio Processing
MAX_AUDIO_LENGTH=300
AUDIO_QUALITY=high
SAMPLE_RATE=44100
CHANNELS=2

# Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_AUTH=false
ENABLE_2FA=false

# Subscription Defaults
FREE_TIER_CHARACTERS=200000
PRO_TIER_CHARACTERS=1000000
PREMIUM_TIER_CHARACTERS=3000000
ENTERPRISE_TIER_CHARACTERS=10000000

# Support & Notifications
SUPPORT_EMAIL=support@audiomax.com
ADMIN_EMAIL=admin@audiomax.com
NOTIFICATION_EMAIL=notifications@audiomax.com
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
