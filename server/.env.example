# Server Configuration
PORT=3000
NODE_ENV=development

# Client URLs
CLIENT_URL=http://localhost:5173
PRODUCTION_CLIENT_URL=https://maxaudio.com

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/maxaudio
DATABASE_NAME=maxaudio

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PORTAL_CONFIGURATION_ID=bpc_your_portal_configuration_id

# Subscription Plans
STRIPE_PRICE_ID_MONTHLY_PRO=price_your_monthly_pro_price_id
STRIPE_PRICE_ID_YEARLY_PRO=price_your_yearly_pro_price_id
STRIPE_PRICE_ID_MONTHLY_PREMIUM=price_your_monthly_premium_price_id
STRIPE_PRICE_ID_YEARLY_PREMIUM=price_your_yearly_premium_price_id

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM_EMAIL=noreply@maxaudio.com
SMTP_FROM_NAME=MaxAudio

# Storage Configuration
STORAGE_BUCKET=your_storage_bucket
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path_to_credentials.json

# Voice Service Configuration
VOICE_API_KEY=your_voice_api_key
VOICE_API_URL=https://api.voice-service.com
VOICE_API_REGION=us-east-1

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@maxaudio.com

# Feature Flags
ENABLE_VOICE_CLONING=true
ENABLE_CUSTOM_VOICES=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret
PASSWORD_SALT_ROUNDS=10

# Admin Configuration
ADMIN_EMAIL=admin@maxaudio.com
SUPPORT_EMAIL=support@maxaudio.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Cleanup
CLEANUP_SCHEDULE=0 0 * * * # Run at midnight every day
TEMP_FILE_MAX_AGE=86400000 # 24 hours in milliseconds

# Default Limits
DEFAULT_STORAGE_LIMIT=104857600 # 100MB in bytes
DEFAULT_REQUEST_LIMIT=100
DEFAULT_AUDIO_LENGTH=60 # 1 minute in seconds
