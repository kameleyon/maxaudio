# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1
DEBUG=true
LOG_LEVEL=debug

# Database
MONGODB_URI=mongodb://localhost:27017/audiomax
MONGODB_USER=
MONGODB_PASS=
MONGODB_AUTH_SOURCE=admin
MONGODB_DEBUG=false

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m
JWT_VERIFY_EMAIL_EXPIRATION=24h

# Frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_DOMAIN=localhost
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=AudioMax <noreply@audiomax.com>
SMTP_REPLY_TO=support@audiomax.com
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# Stripe Integration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID_BASIC=price_basic_id
STRIPE_PRICE_ID_PRO=price_pro_id
STRIPE_PRICE_ID_PREMIUM=price_premium_id
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_TOLERANCE=300

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=google-credentials.json
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_STORAGE_BUCKET=your-bucket-name
GOOGLE_TTS_LOCATION=global
GOOGLE_TTS_LANGUAGE_CODE=en-US

# Google Cloud TTS
GOOGLE_PROJECT_ID=your_project_id
GOOGLE_CLIENT_EMAIL=your_service_account_email
GOOGLE_PRIVATE_KEY="your_private_key_with_newlines"
GOOGLE_CLIENT_ID=your_oauth_client_id
GOOGLE_CLIENT_SECRET=your_oauth_client_secret
GOOGLE_API_KEY=your_api_key

# PlayHT Configuration
PLAYHT_SECRET_KEY=your_playht_secret_key_here
PLAYHT_USER_ID=your_playht_user_id_here

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later.
RATE_LIMIT_HEADERS=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Security
CORS_MAX_AGE=86400
SECURE_COOKIE=false
COOKIE_SECRET=your-cookie-secret
XSS_PROTECTION=true
CSRF_PROTECTION=true
HELMET_ENABLED=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=audio/wav,audio/mp3,audio/mpeg
UPLOAD_DIRECTORY=uploads

# Audio Processing
MAX_AUDIO_LENGTH=300
AUDIO_QUALITY=high
SAMPLE_RATE=44100
CHANNELS=2

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_AUTH=false
ENABLE_2FA=false

# Subscription Defaults
FREE_TIER_CHARACTERS=200000
PRO_TIER_CHARACTERS=1000000
PREMIUM_TIER_CHARACTERS=3000000
ENTERPRISE_TIER_CHARACTERS=10000000

# Support & Notifications
SUPPORT_EMAIL=support@audiomax.com
ADMIN_EMAIL=admin@audiomax.com
NOTIFICATION_EMAIL=notifications@audiomax.com
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
